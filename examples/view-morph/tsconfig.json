{
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@ments/*": [
                "./src/*"
            ],
            "@ments/web": [
                "./src/web.ts"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "../../src/**/*.ts",
        "../../src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}